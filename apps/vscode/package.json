{
  "name": "@thecap-cv/vscode",
  "displayName": "TheCap CV Generator",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:thecap-cv.generateCV"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "pnpm run package",
